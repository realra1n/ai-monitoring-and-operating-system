{
  "dashboard": {
    "id": null,
    "title": "OTLP Logs Monitoring",
    "tags": ["otlp", "logs", "observability"],
    "style": "dark",
    "timezone": "",
    "panels": [
      {
        "id": 1,
        "title": "Log Volume by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (service_name) (rate({job=\"alloy\"}[5m]))",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Log Levels Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (level) (count_over_time({job=\"alloy\"} | json [5m]))",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"alloy\"} | json | level=\"ERROR\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Application Logs by Service",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"alloy\"} | json | service_name=~\"mnist-test|spring-otel-demo\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 20}
      },
      {
        "id": 5,
        "title": "Log Search",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"alloy\"}",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values({job=\"alloy\"}, service_name)",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ]
    }
  }
}
